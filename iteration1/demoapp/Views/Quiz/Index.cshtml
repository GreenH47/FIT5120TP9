@{
    ViewData["Title"] = "Quiz App";
}


<h2>Index</h2><!-- Add the React and ReactDOM libraries from a CDN -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/react/17.0.2/umd/react.production.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/react-dom/17.0.2/umd/react-dom.production.min.js"></script>
<script src="/js/QuizComponent.js"></script>

<p>Hello from our View Template!</p>

<button id="startQuizButton" onclick="startQuiz()">Start Quiz</button>
<div id="quizContainer" style="display: none;">
    <h1>Quiz</h1>
    <div id="jsonResponse"></div>
</div>

<script>
    function startQuiz() {
        // fetch questions from API
        fetch('https://cqfhkbq6ehglmirs5g45d3sbpm0jfhfb.lambda-url.us-east-1.on.aws/')
            .then(response => response.json())
            .then(data => {
                console.log(data);
                // display quiz container
                document.getElementById('quizContainer').style.display = 'block';
                // display json response to the webpage
                document.getElementById('jsonResponse').innerHTML = JSON.stringify(data);

            })
            .catch(error => console.error('Fetch error:', error));
    }


</script>